{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"recommended": true
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/.devcontainer/**/*",
			"!**/.vscode/**/*",
			"!**/examples/**/*.json",
			"!**/dist/**/*",
			"!**/coverage/**/*",
			"!**/node_modules/**/*",
			"!**/package-lock.json",
			"!**/.npm/**/*",
			"!**/.pre-commit-cache/**/*",
			"!.github/actions/composite-actions/**/*"
		]
	}
}
